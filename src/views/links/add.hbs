<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">

      <div class="card">
        <div class="card-body">
          <form action="/links/add" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="concept"
                class="form-control"
                placeholder="Concept"
                autofocus
              />
            </div>
            <div class="form-group">
              <select name="type" class="form-control">
                <option>Income</option>
                <option>Expense</option>
              </select>
            </div>
            <div class="form-group">
              <input
                type="number"
                name="amount"
                class="form-control"
                placeholder="Amount"
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="category"
                class="form-control"
                placeholder="Category"
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                rows="2"
                class="form-control"
                placeholder="Description"
              ></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>