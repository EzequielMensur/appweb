<div class="col-md-4 mx-auto">

  <div class="card">
    <div class="card-body">
      <form action="/edit/{{link.id}}" method="POST">

        <div class="form-group">
          <input
            type="text"
            name="concept"
            class="form-control"
            placeholder="Concept"
            value="{{link.concept}}"
            autofocus
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            name="amount"
            class="form-control"
            placeholder="Amount"
            value="{{link.amount}}"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="category"
            class="form-control"
            placeholder="Category"
            value="{{link.category}}"
          />
        </div>
        <div class="form-group">
          <textarea
            name="description"
            rows="2"
            class="form-control"
            placeholder="Description"
          >{{link.description}}
          </textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-success btn-block">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>